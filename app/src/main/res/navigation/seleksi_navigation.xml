<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.eduside.seleksiandroid.ui.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_navigation_list"
            app:destination="@id/navigation_list"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/from_left" />
    </fragment>


    <fragment
        android:id="@+id/navigation_list"
        android:name="com.eduside.seleksiandroid.ui.ListItemFragment"
        tools:layout="@layout/fragment_list_item">
        <action
            android:id="@+id/action_navigation_list_to_navigation_home"
            app:destination="@id/navigation_home"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/from_right" />
    </fragment>

</navigation>